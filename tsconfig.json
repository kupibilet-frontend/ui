{
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types",
      "typings/index.d.ts"
    ],
    "outDir": "."
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "typings"],
  "exclude": ["node_modules"]
}
